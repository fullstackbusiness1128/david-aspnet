@using Microsoft.AspNetCore.Http;

@model ActivityViewModel
@{
    ViewData["Title"] = "Transactional Activity | Console";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12 page-header">
            <h1>
                Activity
                <span class="float-right">
                </span>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12 pl-0">

            <div class="panel">
                <div class="panel-heading">
                    <div class="title">
                        <span class="sr-only">Loading...</span>
                        Transactions <i class="fas fa-spinner" aria-hidden="true"></i>
                    </div>
                    <span class="text-success">@TempData["SuccessMessage"]</span>
                    <div class="float-right btn-toolbar">
                        <div class="btn-group dropdown">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <span class="info">50</span>&nbsp;<span class="caret"></span>
                            </button>

                           
                            <ul class="dropdown-menu small">
                                <li>
                                    <a href="#">25</a>
                                    <a href="#">50</a>
                                    <a href="#">100</a>
                                    <a href="#">200</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body resultspanel">
                    @Html.Partial("_Transactions", Model)
                </div>
                <!-- /.panel-body -->
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        var endpoint = "/activity/UpdateResults";
    </script>

    @{ await Html.RenderPartialAsync("_ResultsScriptsPartialFilter"); }
}