@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Sign in";
}

<div id="page-wrapper">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-8">
            <section>
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                    <h4>Use a local account to sign in.</h4>
                    <hr />
                    <div class="form-group row">
                        <label asp-for="Email" class="col-2 control-label"></label>
                        <div class="col-10">
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Password" class="col-2 control-label"></label>
                        <div class="col-10">
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-2 col-10">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-2 col-10">
                            <button type="submit" class="btn btn-default">Sign In</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-4">
            <section>
                <h4>FunTokenz Console</h4>
                <hr />
                <div>
                    <p>Sign in to the FunTokenz Console.<br/><br/>If you are unable to sign in you may <a asp-action="ForgotPassword">reset your password</a>. If you are new here contact the Administrator for access.</p>
                </div>
            </section>
        </div>
    </div>
</div>
    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
