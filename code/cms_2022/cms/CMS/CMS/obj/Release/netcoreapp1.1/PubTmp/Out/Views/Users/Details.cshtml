@model ApplicationUser
@{
    ViewData["Title"] = "User Details";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12 page-header">
            <h1>
                @ViewData["Title"]
                <span class="float-right">
                    <a href="~/users/" class="btn btn-primary">Back</a>
                </span>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-8 pl-0">
            <form asp-controller="Users" asp-action="Details" method="post" class="form-horizontal">
                <div class="panel">
                    <div class="panel-heading">
                        <div class="title">Edit user: @Model.Email</div>
                    </div>
                    <div class="panel-body">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="Firstname" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Firstname" class="form-control" value="@Model.Firstname" />
                                <span asp-validation-for="Firstname" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Lastname" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <input asp-for="Lastname" class="form-control" value="@Model.Lastname" />
                                <span asp-validation-for="Lastname" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Level" class="col-md-3 control-label"></label>
                            <div class="col-md-9">
                                <select asp-for="Level" class="form-control">
                                    @if (Model.Level == "1")
                                    {
                                        <option selected value="1">Administrator</option>
                                        <option value="2">Manager</option>
                                        <option value="3">Member</option>
                                    }
                                    else if (Model.Level == "2")
                                    {
                                        <option value="1">Administrator</option>
                                        <option selected value="2">Manager</option>
                                        <option value="3">Member</option>
                                    }
                                    else
                                    {
                                        <option value="1">Administrator</option>
                                        <option value="2">Manager</option>
                                        <option selected value="3">Member</option>
                                    }
                                </select>
                                <span asp-validation-for="Level" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 control-label">Account Reference Number</label>
                            <div class="col-md-9">
                                <input class="form-control" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 control-label">Is Enabled</label>
                            <div class="col-md-9">
                                <select class="form-control">
                                    <option value="0">Yes</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel">
                    <div class="panel-heading">
                        <div class="title">Kiron Gaming Settings</div>
                    </div>
                    <div class="panel-body">

                        <div class="form-group row">
                            <label class="col-md-3 control-label">Kiron Player Id</label>
                            <div class="col-md-9">
                                <input class="form-control" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 control-label">Kiron Player Token</label>
                            <div class="col-md-9">
                                <input class="form-control" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 control-label">Kiron Player Currency</label>
                            <div class="col-md-9">
                                <input class="form-control" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 control-label">Kiron Player Language</label>
                            <div class="col-md-9">
                                <input class="form-control" />
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="offset-3 col-md-9 p-0">
                                <button type="submit" class="btn btn-default">Update</button>
                            </div>
                        </div>


                    </div>
                </div>
            </form>
        </div>
        <div class="col-4 pl-0">
            <div class="panel">
                <div class="panel-heading">
                    <div class="title">Information</div>
                </div>
                <div class="panel-body">
                    Users will have access to administer this CMS and the PNGBet website.
                </div>
            </div>
            <div class="panel">
                <div class="panel-heading">
                    <div class="title">Publish Options</div>
                </div>
                <div class="panel-body publish text-right">
                            <form asp-controller="users" asp-action="remove" method="post" class="form-horizontal" name="FormRemove">
                                <input type="hidden" name="Id" value="@Model.Id" />
                                <a href="#" onclick="document.FormRemove.submit();" style="font-size:12px;">Remove User</a>
                            </form>
                </div>
                <br />
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
