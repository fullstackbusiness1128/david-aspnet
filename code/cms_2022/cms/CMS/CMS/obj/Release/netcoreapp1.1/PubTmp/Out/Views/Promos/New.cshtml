@model PromoItemForm
@{
    ViewData["Title"] = "New | Promos | Console";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12 page-header">
            <h1>
                @ViewData["Title"]
                <span class="float-right">
                    <a href="~/promos/" class="btn btn-primary">Back</a>
                </span>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-8 pl-0">
            <form asp-controller="Promos" asp-action="New" method="post" class="form-horizontal" name="FormPromo">
                <input type="hidden" id="IsDraft" name="IsDraft" value="false" />
                <div class="panel">
                    <div class="panel-heading">
                        <div class="title">Create a new promo</div>
                    </div>
                    <div class="panel-body">
                        <div class="form-group row">
                            <label asp-for="Name" class="col-md-3 control-label">Name</label>
                            <div class="col-md-9">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Code" class="col-md-3 control-label">Code</label>
                            <div class="col-md-9">
                                <input asp-for="Code" class="form-control" />
                                <span asp-validation-for="Code" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="BonusPool" class="col-md-3 control-label">Award To</label>
                            <div class="col-md-9">
                                <select asp-for="BonusPool" class="form-control">
                                    <option value="Sports">Sports Bonus</option>
                                    <option value="Racing">Racing Bonus</option>
                                </select>
                                <span asp-validation-for="BonusPool" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="AwardedAmount" class="col-md-3 control-label">Awarded Amount</label>
                            <div class="col-md-9">
                                <input asp-for="AwardedAmount" class="form-control" placeholder="0.00" />
                                <span asp-validation-for="AwardedAmount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="MinimumAmount" class="col-md-3 control-label">Minimum Amount</label>
                            <div class="col-md-9">
                                <input asp-for="MinimumAmount" class="form-control" placeholder="0.00" />
                                <span asp-validation-for="MinimumAmount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="MaxUse" class="col-md-3 control-label">Max Use</label>
                            <div class="col-md-9">
                                <input asp-for="MaxUse" class="form-control" />
                                <span asp-validation-for="MaxUse" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="OneTimeUse" class="col-3 control-label">One Time Use</label>
                            <div class="col-md-9">
                                <select asp-for="OneTimeUse" class="form-control">
                                    <option value="true">Yes</option>
                                    <option value="false">No</option>
                                </select>
                                <span asp-validation-for="OneTimeUse" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="DatetimeStart" class="col-3 control-label">Start Time</label>
                            <div class="input-group date col-9" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" data-target="#DatetimeStart" name="DatetimeStart" for="DatetimeStart" id="DatetimeStart" />
                                <div class="input-group-append" data-target="#DatetimeStart" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                                <span data-valmsg-for="DatetimeStart" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="DatetimeEnd" class="col-3 control-label">End Time</label>
                            <div class="input-group date col-9" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" data-target="#DatetimeEnd" name="DatetimeEnd" for="DatetimeEnd" id="DatetimeEnd" />
                                <div class="input-group-append" data-target="#DatetimeEnd" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                                <span data-valmsg-for="DatetimeEnd" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-4 pl-0">
            <div class="panel">
                <div class="panel-heading">
                    <div class="title">Information</div>
                </div>
                <div class="panel-body">
                    Manage Promo content
                </div>
            </div>
            <div class="panel">
                <div class="panel-heading">
                    <div class="title">Publish Options</div>
                </div>
                <div class="panel-body publish">
                    <a onclick="document.FormPromo.submit();" class="btn btn-default">Publish</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles
{
    <link rel="stylesheet" href="/css/tempus.css" />
}

@section Scripts
{
    <script src="/js/moment.js"></script>
    <script src="/js/tempus.js"></script>
    <script>
        $(document).ready(function () {
            $('#DatetimeStart,#DatetimeEnd').datetimepicker({
                format: 'YYYYMMDDHHmmss'
            });
        });
    </script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}