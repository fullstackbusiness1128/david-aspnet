@model WithdrawalsView

@{
    ViewData["Title"] = "Withdrawals | Console";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12 page-header">
            <h1>
                Withdrawals
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-9 pl-0">
            <div class="panel">
                <div class="panel-heading">
                    <div class="title">
                        <span class="sr-only">Loading...</span>
                        Withdrawals <i class="fas fa-spinner" aria-hidden="true"></i>
                    </div>
                    <span class="text-success">@TempData["SuccessMessage"]</span>
                    <div class="float-right btn-toolbar">
                        <div class="btn-group dropdown">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <span class="info">25</span>&nbsp;<span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu small">
                                <li>
                                    <a href="#">25</a>
                                    <a href="#">50</a>
                                    <a href="#">100</a>
                                    <a href="#">200</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="panel-body resultspanel">
                    @Html.Partial("_WithdrawalResults", Model)
                </div>
            </div>
        </div>
        <div class="col-3 pr-0">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="title">
                        <i class="fa fa-search fa-fw"></i> Search
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="input-group custom-search-form">
                        <input type="text" class="form-control" placeholder="Player Name..." id="search-email">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </div>
                <br />
                <div class="panel-heading">
                    <div class="title">
                        <i class="fa fa-cog"></i> Filter
                    </div>
                </div>
                <div class="panel-body">
                    <div class="input-group custom-search-form">
                        <select class="form-control" id="search-filtera">
                            <option selected value="0">All</option>
                            <option value="1">Pending</option>
                            <option value="2">Processed</option>
                        </select>
                    </div>
                </div>
                <br />
                @*<div class="panel-heading">
                <div class="title">
                    <i class="fa fa-download"></i> Export
                </div>
            </div>*@
                <!-- /.panel-heading -->
                @*<div class="panel-body">
                <div class="input-group custom-search-form">
                    <p><a class="btn btn-primary" href="#">CSV</a> <a class="btn btn-primary" href="#">XLSX</a> <a class="btn btn-primary" href="">PDF</a></p>
                </div>
            </div>*@
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        var endpoint = "/withdrawals/UpdateResults";
    </script>

    @{ await Html.RenderPartialAsync("_ResultsScriptsPartialFilter"); }
}