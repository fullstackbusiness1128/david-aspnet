@model DepositView
@{
    ViewData["Title"] = "Details | Deposits | Console";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12 page-header">
            <h1>
                @ViewData["Title"]
                <span class="float-right">
                    <a href="~/deposits/" class="btn btn-primary">Back</a>
                </span>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12 pl-0">
            <div class="panel">
                <div class="panel-heading">
                    <div class="title">Deposit Information</div>
                </div>
                <div class="panel-body">
                    <div class="form-group row">
                        <label for="Name" class="col-md-3 control-label">User Id: </label>
                        <div class="col-md-9">
                            <p>@Model.DepositItem.UserId</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Name" class="col-md-3 control-label">Full Name: </label>
                        <div class="col-md-9">
                            <p>@Model.DepositItem.Fullname</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Name" class="col-md-3 control-label">Deposit Id: </label>
                        <div class="col-md-9">
                            <p>@Model.DepositItem.Id</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Name" class="col-md-3 control-label">Date Created: </label>
                        <div class="col-md-9">
                            <p>@Model.DepositItem.DatetimeCreated</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Name" class="col-md-3 control-label">Status: </label>
                        <div class="col-md-9">
                            <p>@Model.DepositItem.Status</p>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group row">
                        <label for="Name" class="col-md-3 control-label">Currency: </label>
                        <div class="col-md-9">
                            <p>@Model.DepositItem.Currency</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Name" class="col-md-3 control-label">Amount: </label>
                        <div class="col-md-9">
                            <p>@Model.DepositItem.Value</p>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group row">
                        <label for="Name" class="col-md-3 control-label">Promo Code: </label>
                        <div class="col-md-9">
                            <p>@Model.DepositItem.PromoCode</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Name" class="col-md-3 control-label">Promo Bonus Amount: </label>
                        <div class="col-md-9">
                            <p>@Model.DepositItem.PromoAmountToAdd</p>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group row">
                        <label for="Name" class="col-md-3 control-label">Exchange Currency: </label>
                        <div class="col-md-9">
                            <p>@Model.DepositItem.ChargeCurrency</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Name" class="col-md-3 control-label">Exchange Rate: </label>
                        <div class="col-md-9">
                            <p>@Model.DepositItem.ChargeRate</p>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group row">
                        <label for="Name" class="col-md-3 control-label">Comment: </label>
                        <div class="col-md-9">
                            <p>@Model.DepositItem.Comment</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}