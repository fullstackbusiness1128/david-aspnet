@{
    ViewData["Title"] = "Withdrawals | Console";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12 page-header">
            <h1>
                Withdrawals
                <span class="float-right">
                </span>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-9 pl-0">
            <div class="panel">
                <div class="panel-heading">
                    <div class="title">
                        <span class="sr-only">Loading...</span>
                        Withdrawal <i class="fas fa-spinner" aria-hidden="true"></i>
                    </div>
                    <span class="text-success">@TempData["SuccessMessage"]</span>
                    <div class="float-right btn-toolbar">
                        <div class="btn-group dropdown">
                            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                                <span class="info">25</span>&nbsp;<span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu small">
                                <li>
                                    <a href="#">25</a>
                                    <a href="#">50</a>
                                    <a href="#">100</a>
                                    <a href="#">200</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body resultspanel m-0 p-0">



                    <table class="table table-hover table-striped m-0" id="results-table">
                        <thead>
                            <tr>
                                <th class="tw-tiny"></th>
                                <th class="tw-medium btnsort" data-field="Firstname" data-order="asc">Date Requested <i class="fa fa-sort"></i></th>
                                <th class="btnsort" data-field="Level" data-order="asc">Player <i class="fa fa-sort"></i></th>
                                <th class="tw-medium btnsort" data-field="Level" data-order="asc">Amount Requested <i class="fa fa-sort"></i></th>
                                <th class="tw-medium btnsort" data-field="Balance" data-order="asc">Player Balance<i class="fa fa-sort"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var i = 0;
                                while (i < 25)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" />
                                        </td>
                                        <td>-</td>
                                        <td><a href="/player">#</a></td>
                                        <td>$</td>
                                        <td>$</td>
                                    </tr>
                                    i++;
                                }
                            }
                        </tbody>
                    </table>



                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-9 -->
        <div class="col-3 pr-0">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="title">
                        <i class="fa fa-search fa-fw"></i> Reconcile
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="input-group custom-search-form">
                        <p><a class="btn btn-primary w-100" href="#">Generate ABA</a> . <a class="btn btn-primary w-100" href="#">PAY CASH</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        //var endpoint = "/contents/UpdateResults";
    </script>

    @{ await Html.RenderPartialAsync("_ResultsScriptsPartialFilter"); }
}