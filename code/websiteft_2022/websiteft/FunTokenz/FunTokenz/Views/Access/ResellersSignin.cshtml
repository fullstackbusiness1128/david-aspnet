@{
    Layout = Layout = "~/Views/Shared/_Layout1.cshtml";
}

@model SignInView

@{
    ViewData["Title"] = "Sign In";
}


@section Styles
    {
    <style>
        .inner_sec_info_wthree_agile {
            margin-top: 7em;
        }

        .banner_bottom {
            padding-bottom: 0;
        }

        .banner_bottom {
            background: #FFFFB2;
        }

    </style>
}


<div class="banner_bottom">
    <div class="container">
        <div class="row">
            <div class="inner_sec_info_wthree_agile">
                <div class="help_full">

                    <div class="col-md-6 col-sm-6 banner_bottom_left">
                        <h1>HELP US GROW</h1>
                        <p>
                            We're looking for resellers and businesses to help us expand. 
                            We have a variety of solutions for resellers to earn and grow with us along the way. 
                            To become an authorised Reseller of Fun Tokenz express your interest with us below.
                        </p>
                    </div>

                    <div class="col-md-6 col-sm-6 banner_bottom_grid help">

                        <!---728x90--->
                        <div class="signin-form">
                            <h2 style="text-align: start">Sign In</h2>
                            <p style="font-size: 11pt; text-align: start">Access your reseller account. If you would like to become a reseller, <a href="~/resellers/join">then click here</a> to join.</p>
                            <form asp-controller="Access" asp-action="ResellersSignin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                <input type="hidden" asp-for="JoinType" value="R">
                                <div asp-validation-summary="All" class="text-danger"></div>

                                <input type="email" asp-for="Email" placeholder="Enter your email address" required="">
                                <input type="password" asp-for="Password" placeholder="Enter your password" required="">

                                <div style="text-align: start">
                                    <input asp-for="RememberMe" class="form-check form-check-input" type="checkbox" value="true" id="defaultCheck1" checked>
                                    <label class="form-check-label" for="defaultCheck1">Remember Me</label>
                                </div>

                                <div class="tp" style="margin-top: 1em">
                                    <button type="submit" class="btn btn-danger btn-block btn-outline-danger">Signin</button>
                                </div>
                            </form>

                            <p style="margin-top: 1em">
                                <a href="~/resellers/join"> Or become a reseller</a>
                            </p>

                            <p>
                                <a  style="color: #D9534F" href="~/reset"> Forgot your password?</a>
                            </p>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>

