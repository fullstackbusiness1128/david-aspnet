@using Microsoft.AspNetCore.Http;

@{
    Layout = Layout = "~/Views/Shared/_Layout1.cshtml";
}

@{
    ViewData["Title"] = "Step 1";
}

@model ResellerPurchaseForm


@section Styles
    {
    <style>
        .inner_sec_info_wthree_agile {
            margin-top: 0em;
        }

        .breadcrumb-1 {
            background: #F4F9FE;
        }

        .form-group.custom-bg {
            background-color: #F4F5F7;
            width: 100%;
            align-items: center;
            padding: 25px 30px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        .panel1 {
            padding: 28px;
            margin: 20px 0px 30px 0px;
            border: 1px solid rgba(150, 200, 250, 0.1);
            background: rgba(150, 200, 250, 0.1);
            box-shadow: 0px 0px 20px rgb(0 0 0 / 30%);
            border: 10px solid #FFF;
            border-radius: 10px;
        }

        .panel {
            margin: 20px 0px 30px 0px;
            padding: 14px;
            border: 1px solid rgba(150, 200, 250, 0.1);
        }

        .total {
            text-align: right;
            color: #303030;
            padding: 16px 36px;
            background: #f1f1f1;
            font-weight: 600;
        }

        .tokens-list {
            width: 100%;
            margin-top: 10px;
        }

        .text-left {
            text-align: left !important;
        }

        .each-token {
            width: 100%;
            flex-direction: row;
            padding: 20px 28px;
            background-color: #F4F5F7;
            justify-content: space-between;
            margin-top: 16px;
        }

        .text-danger {
            color: #dc3545 !important;
        }

        .each-token h5.price {
            text-align: right;
            font-weight: 600;
        }

        .token-info span {
            text-align: left;
            color: #868a9a;
        }

        .token-info h5 {
            text-align: left;
            color: #15294b;
            margin-bottom: 10px;
        }

        .each-token h5.price span {
            font-size: 14px;
            font-weight: 600;
            background: #FFF;
            border-radius: 3px;
            padding: 2px;
            color: #15294b;
        }

        .mt-4, .my-4 {
            margin-top: 1.5rem !important;
        }

        .align-items-center {
            -ms-flex-align: center !important;
            align-items: center !important;
        }

        .d-flex {
            display: -ms-flexbox !important;
            display: flex !important;
        }

        .mr-2, .mx-2 {
            margin-right: 0.5rem !important;
        }

        .d-md-none {
            display: none !important;
        }

        img {
            vertical-align: middle;
            border-style: none;
        }

        .mt-3, .my-3 {
            margin-top: 1rem !important;
        }

        .w-100 {
            width: 100% !important;
        }

        .rates .rate input[type='text'] {
            padding: 10px;
            font-size: 1.3em;
            margin-bottom: 10px;
            border: 1px solid #f1f1f1;
            width: 100%;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.15);
        }

        .btn-grey {
            margin-top: 20px;
            background-color: rgba(150, 200, 250, 0.1);
            text-align: center;
            color: #303030;
            padding: 15px 30px;
            width: fit-content;
        }

        .btn {
            transition: .2s transform;
        }

        .font-weight-bold {
            font-weight: 700 !important;
        }

        button:not(:disabled), [type="button"]:not(:disabled), [type="reset"]:not(:disabled), [type="submit"]:not(:disabled) {
            cursor: pointer;
        }

        .btn:focus, .btn.focus {
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .btn:focus, .btn:active:focus, .btn.active:focus, .btn.focus, .btn:active.focus, .btn.active.focus {
            outline: thin dotted;
            outline: 5px auto #00000000;
            outline-offset: -2px;
        }

        .form-group.custom-bg input, .form-group.text-left input {
            padding: 16px;
            margin-top: 5px;
            border: 0px;
            font-weight: 600;
        }
    </style>
}

<div class="container-fluid breadcrumb-1" style="margin-top: 8.1em">
    <div class="row">
        <p style="padding: 0.5em 0 0 1em"><a href="~/">Home</a> . <a href="~/resellers/home">Resellers Home</a> . Bulk Purchase Tokenz</p>
    </div>
</div>


<div class="banner_bottom">
    <div class="container">
        <div class="inner_sec_info_wthree_agile">
            <div class="help_full">
                <div class="col-md-3 col-xs-12 banner_bottom_grid help"></div>
                <div class="col-md-6 col-xs-12 banner_bottom_grid help">
                    <h2 class="page-mobile-title">Add to your balance</h2>
                    <p class="text-md-left">Your purchase currency is: <b>@Context.Session.GetString("ResellerCurrency")</b>.<br /><br />Enter the amount of tokens you wish to purchase (1 Token = 1 @Context.Session.GetString("ResellerCurrency")).</p>
                    <form asp-controller="Resellers" asp-action="Confirm" method="post" class="w-100 mt-2">
                        <div asp-validation-summary="All" class="text-danger text-left"></div>
                        <div class="form-group custom-bg">
                           <div class="row">
                               <div class="col-md-5 col-sm-5">
                                   <label>How Many Fun Tokens: <sub><br />Minimum of: 1000.00</sub></label>
                               </div>
                               <div class="col-md-7 col-sm-7">
                                   <input type="text" asp-for="Amount" value="1000.00" class="form-control" />
                               </div>     
                           </div>
                        </div>
                        

                        <button type="submit" class="btn btn-block btn-danger mt-4 font-weight-bold">REVIEW PURCHASE</button>
                    </form>

                </div>
                <div class="col-md-3 col-xs-12 banner_bottom_grid help"></div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
