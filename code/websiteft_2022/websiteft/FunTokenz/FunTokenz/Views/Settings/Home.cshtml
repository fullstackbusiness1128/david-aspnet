@using System.Globalization

@model SettingsView

@{
    Layout = Layout = "~/Views/Shared/_Layout1.cshtml";
}


@{
    ViewData["Title"] = "Home";
}


@section Styles
    {
    <style>
        .inner_sec_info_wthree_agile {
            margin-top: 0em;
        }

        .breadcrumb-1 {
            background: #F4F9FE;
        }

        .form-group.custom-bg {
            background-color: #F4F5F7;
            width: 100%;
            align-items: center;
            padding: 25px 30px;
            margin-bottom: 20px;
            border-radius: 5px;
        }

        .panel1 {
            padding: 28px;
            margin: 20px 0px 30px 0px;
            border: 1px solid rgba(150, 200, 250, 0.1);
            background: rgba(150, 200, 250, 0.1);
            box-shadow: 0px 0px 20px rgb(0 0 0 / 30%);
            border: 10px solid #FFF;
            border-radius: 10px;
        }

        .panel {
            margin: 20px 0px 30px 0px;
            padding: 14px;
            border: 1px solid rgba(150, 200, 250, 0.1);
        }

        .total {
            text-align: right;
            color: #303030;
            padding: 16px 36px;
            background: #f1f1f1;
            font-weight: 600;
        }

        .tokens-list {
            width: 100%;
            margin-top: 10px;
        }

        .text-left {
            text-align: left !important;
        }

        .each-token {
            width: 100%;
            flex-direction: row;
            padding: 20px 28px;
            background-color: #F4F5F7;
            justify-content: space-between;
            margin-top: 16px;
        }

        .text-danger {
            color: #dc3545 !important;
        }

        .each-token h5.price {
            text-align: right;
            font-weight: 600;
        }

        .token-info span {
            text-align: left;
            color: #868a9a;
        }

        .token-info h5 {
            text-align: left;
            color: #15294b;
            margin-bottom: 10px;
        }

        .each-token h5.price span {
            font-size: 14px;
            font-weight: 600;
            background: #FFF;
            border-radius: 3px;
            padding: 2px;
            color: #15294b;
        }

        .mt-4, .my-4 {
            margin-top: 1.5rem !important;
        }

        .align-items-center {
            -ms-flex-align: center !important;
            align-items: center !important;
        }

        .d-flex {
            display: -ms-flexbox !important;
            display: flex !important;
        }

        .mr-2, .mx-2 {
            margin-right: 0.5rem !important;
        }

        .d-md-none {
            display: none !important;
        }

        img {
            vertical-align: middle;
            border-style: none;
        }

        .mt-3, .my-3 {
            margin-top: 1rem !important;
        }

        .w-100 {
            width: 100% !important;
        }

        .rates .rate input[type='text'] {
            padding: 10px;
            font-size: 1.3em;
            margin-bottom: 10px;
            border: 1px solid #f1f1f1;
            width: 100%;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.15);
        }

        .btn-grey {
            margin-top: 20px;
            background-color: rgba(150, 200, 250, 0.1);
            text-align: center;
            color: #303030;
            padding: 15px 30px;
            width: fit-content;
        }

        .btn {
            transition: .2s transform;
        }

        .font-weight-bold {
            font-weight: 700 !important;
        }

        button:not(:disabled), [type="button"]:not(:disabled), [type="reset"]:not(:disabled), [type="submit"]:not(:disabled) {
            cursor: pointer;
        }

        .btn:focus, .btn.focus {
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .btn:focus, .btn:active:focus, .btn.active:focus, .btn.focus, .btn:active.focus, .btn.active.focus {
            outline: thin dotted;
            outline: 5px auto #00000000;
            outline-offset: -2px;
        }

   

        .expandChildTable:before {
            height: 1em;
            width: 1em;
            margin-top: -9px;
            display: inline-block;
            color: white;
            border: .15em solid white;
            border-radius: 1em;
            box-shadow: 0 0 .2em #444;
            box-sizing: content-box;
            text-align: center;
            text-indent: 0 !important;
            font-family: "Courier New",Courier,monospace;
            line-height: 1em;
            content: "+";
            background-color: #31b131;
           
        }
        .expandChildTable.selected:before {
            content: "-";
            background-color: #d33333;
        }

        .childTableRow {
            display: none;
        }

        .childTableRow table {
            border: 2px solid #868a9a;
        }

    </style>
}


<div class="container-fluid breadcrumb-1" style="margin-top: 8.1em">
    <div class="row">
        <p style="padding: 0.5em 0 0 1em"><a href="~/">Home</a> . Settings</p>
    </div>
</div>




<div class="banner_bottom">
    <div class="container">
        <div class="inner_sec_info_wthree_agile">
            <div class="help_full">
                <div class="col-md-6 col-xs-12 banner_bottom_grid help">
                    <h2>Customers</h2>
                    <div class="panel resultspanel">
                        @if (Model.CustomerRecords.Customers.Count == 0)
                        {
                            <p>You have no customers to show.</p>
                        }
                        else
                        {
                            @await Html.PartialAsync("_Customers", Model.CustomerRecords)
                        }
                    </div>
                </div>
                <div class="col-md-6 col-xs-12 banner_bottom_left">
                    <div class="panel1">
                        <h3>Reseller Fees</h3>
                        <p>Manage your profit margin by setting your fees on customers purchases and withdrawals.</p>
                        <form asp-controller="settings" asp-action="rates" method="post" class="w-100 mt-2">
                            <div asp-validation-summary="All" class="text-danger text-left"></div>
                            
                            <label>Purchase % Fee</label>
                            <div class="rates">
                                <div class="rate">
                                    <input type="text" name="Purchase" id="Purchase" value="@Model.Rates.Purchase" />
                                </div>

                                <label>Withdrawal % Fee</label>
                                <div class="rate">
                                    <input type="text" name="Withdrawal" id="Withdrawal" value="@Model.Rates.Withdrawal" />
                                </div>
                                <button type="submit" class="btn btn-block btn-grey mt-4 font-weight-bold w-100">Update Rates</button>
                            </div>
                        </form>
                    </div>

                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script type="text/javascript">
        var endpoint = "/settings/home";
    </script>

    @{ await Html.RenderPartialAsync("_ResultsScriptsPartial"); }

    <script>
        $(function () {
            $('.expandChildTable').on('click', function () {
                $(this).toggleClass('selected').closest('tr').next().toggle();
            })
        });
    </script>

}